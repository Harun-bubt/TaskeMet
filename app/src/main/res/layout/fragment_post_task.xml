<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/screen_background">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/post_tabLayout"
        android:layout_width="match_parent"
        app:tabTextColor="@color/white"
        android:background="@color/Theme1"
        app:tabBackground="@drawable/tablayout_background_color"
        app:tabSelectedTextColor="@color/white"
        app:tabIndicatorColor="@color/Theme1"
        android:layout_height="wrap_content"
        app:tabIndicatorHeight="4dp"
        app:tabTextAppearance="@style/TabLayoutTextStyle">
    </com.google.android.material.tabs.TabLayout>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/post_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/post_tabLayout"
        android:layout_centerInParent="true"
        android:background="@color/light_post_viewpager_background"
        tools:layout_editor_absoluteX="8dp" />


</RelativeLayout>
