                                        android:textSize="18sp"
                                        android:textColor="@color/text_color1"/>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/serv_Home_Delivery"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:layout_marginStart="6dp"
                                android:layout_marginEnd="15dp"
                                android:layout_marginBottom="20dp"
                                app:cardCornerRadius="15dp"
                                android:padding="10dp">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="30dp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="30dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="60dp"
                                        android:src="@drawable/icon_delivery"
                                        android:contentDescription="@string/image" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/home_delivery"
                                        android:layout_marginTop="5dp"
                                        android:textSize="20sp"
                                        android:textColor="@color/text_color1"/>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:baselineAligned="false">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/serv_Carrental"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="15dp"
                                android:layout_marginBottom="20dp"
                                android:layout_marginEnd="6dp"
                                android:background="@color/white"
                                app:cardCornerRadius="15dp"
                                android:padding="10dp">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="30dp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="30dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="60dp"
                                        android:src="@drawable/icon_vehicle"
                                        android:contentDescription="@string/image" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/car_rental"
                                        android:layout_marginTop="5dp"
                                        android:textSize="20sp"
                                        android:textColor="@color/text_color1"/>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/serv_Events"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:layout_marginStart="6dp"
                                android:layout_marginEnd="15dp"
                                android:layout_marginBottom="20dp"
                                app:cardCornerRadius="15dp"
                                android:padding="10dp">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="30dp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="30dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="60dp"
                                        android:src="@drawable/icon_event"
                                        android:contentDescription="@string/image" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/events"
                                        android:layout_marginTop="5dp"
                                        android:textSize="20sp"
                                        android:textColor="@color/text_color1"/>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:baselineAligned="false">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/serv_health"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="15dp"
                                android:layout_marginBottom="20dp"
                                android:layout_marginEnd="6dp"
                                android:background="@color/white"
                                app:cardCornerRadius="15dp"
                                android:padding="10dp">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="30dp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="30dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="60dp"
                                        android:src="@drawable/icon_health"
                                        android:contentDescription="@string/image" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/health"
                                        android:layout_marginTop="5dp"
                                        android:textSize="20sp"
                                        android:textColor="@color/text_color1"/>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/serv_Catering"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="15dp"
                                android:layout_marginStart="6dp"
                                android:layout_marginBottom="20dp"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:padding="10dp"
                                app:cardCornerRadius="15dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="30dp"
