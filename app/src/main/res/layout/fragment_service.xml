                                    android:src="@drawable/icon_marriage"
                                    android:contentDescription="@string/image" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/marriage"
                                    android:layout_marginTop="5dp"
                                    android:textSize="20sp"
                                    android:textColor="@color/text_color1"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/serv_development"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="20dp"
                            app:cardCornerRadius="15dp"
                            android:padding="10dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="30dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_marginTop="30dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:src="@drawable/icon_development"
                                    android:contentDescription="@string/image" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/development"
                                    android:layout_marginTop="5dp"
                                    android:textSize="20sp"
                                    android:textColor="@color/text_color1"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/serv_hiddenItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:orientation="vertical"
                        android:baselineAligned="false">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:baselineAligned="false">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/serv_ElectronicsRepair"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="15dp"
                                android:layout_marginBottom="20dp"
                                android:layout_marginEnd="6dp"
                                android:background="@color/white"
                                app:cardCornerRadius="15dp"
                                android:padding="10dp">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="30dp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="30dp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="60dp"
                                        android:src="@drawable/icon_repair"
                                        android:contentDescription="@string/image" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/electronics_repair"
