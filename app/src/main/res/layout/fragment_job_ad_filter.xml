<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomLine"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Job Type"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnJobOffer"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/offering_job"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/button_selected"
                    android:textColor="@color/Theme1"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textSize="15sp"/>

                <Button
                    android:id="@+id/btnCvResume"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/cv_resume"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/text_light_gray"
                    android:gravity="center"
                    android:background="@drawable/button_unselected"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textSize="15sp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Salary Period"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbarStyle="outsideInset"
                android:scrollbarSize="@dimen/_3sdp"
                android:scrollbarThumbHorizontal="@drawable/scrollbar_design">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnAllSalary"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="@string/all"
                        android:layout_margin="@dimen/_5sdp"
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingEnd="@dimen/_15sdp"
                        android:textColor="@color/text_light_gray"
                        android:gravity="center"
                        android:background="@drawable/button_unselected"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:textSize="15sp"/>

                    <Button
                        android:id="@+id/btnHourly"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="@string/hourly"
                        android:layout_margin="@dimen/_5sdp"
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingEnd="@dimen/_15sdp"
                        android:textColor="@color/text_light_gray"
                        android:gravity="center"
                        android:background="@drawable/button_unselected"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:textSize="15sp"/>

                    <Button
                        android:id="@+id/btnWeekly"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="@string/weekly"
                        android:layout_margin="@dimen/_5sdp"
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingEnd="@dimen/_15sdp"
                        android:textColor="@color/text_light_gray"
                        android:gravity="center"
                        android:background="@drawable/button_unselected"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:textSize="15sp"/>

                    <Button
                        android:id="@+id/btnMonthly"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="@string/monthly"
                        android:layout_margin="@dimen/_5sdp"
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingEnd="@dimen/_15sdp"
                        android:textColor="@color/text_light_gray"
                        android:gravity="center"
                        android:background="@drawable/button_unselected"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:textSize="15sp"/>

                    <Button
                        android:id="@+id/btnYearly"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="@string/yearly"
                        android:layout_margin="@dimen/_5sdp"
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingEnd="@dimen/_15sdp"
                        android:textColor="@color/text_light_gray"
                        android:gravity="center"
                        android:background="@drawable/button_unselected"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:textSize="15sp"/>

                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Position Type"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbarStyle="outsideInset"
                android:scrollbarSize="@dimen/_3sdp"
                android:scrollbarThumbHorizontal="@drawable/scrollbar_design">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnAllPosition"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="@string/all"
                        android:layout_margin="@dimen/_5sdp"
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingEnd="@dimen/_15sdp"
                        android:textColor="@color/text_light_gray"
                        android:gravity="center"
                        android:background="@drawable/button_unselected"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:textSize="15sp"/>

                    <Button
                        android:id="@+id/btnContract"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="@string/contract_base"
                        android:layout_margin="@dimen/_5sdp"
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingEnd="@dimen/_15sdp"
                        android:textColor="@color/text_light_gray"
                        android:gravity="center"
                        android:background="@drawable/button_unselected"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:textSize="15sp"/>

                    <Button
                        android:id="@+id/btnFullTime"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="@string/full_time_job"
                        android:layout_margin="@dimen/_5sdp"
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingEnd="@dimen/_15sdp"
                        android:textColor="@color/text_light_gray"
                        android:gravity="center"
                        android:background="@drawable/button_unselected"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:textSize="15sp"/>

                    <Button
                        android:id="@+id/btnPartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="@string/part_time_job"
                        android:layout_margin="@dimen/_5sdp"
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingEnd="@dimen/_15sdp"
                        android:textColor="@color/text_light_gray"
                        android:gravity="center"
                        android:background="@drawable/button_unselected"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:textSize="15sp"/>

                </LinearLayout>

            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Salary Period"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:textSize="18sp"/>

                    <Spinner
                        android:id="@+id/salaryCategorySpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textSize="16sp"
                        android:layout_marginStart="-8dp"
                        android:textColor="@color/text_color1"
                        android:prompt="@string/all"
                        android:autofillHints="e.g Hourly/Monthly" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Position Type"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:textSize="18sp"/>

                    <Spinner
                        android:id="@+id/positionTypeSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:layout_marginStart="-8dp"
                        android:textSize="16sp"
                        android:textColor="@color/text_color1"
                        android:autofillHints="e.g Hourly/Monthly" />


                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Sort"
                android:layout_marginTop="2dp"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="3"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnAsc"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_selected"
                    android:gravity="center"
                    android:text="Asc"
                    android:textAllCaps="false"
                    android:textColor="@color/text_light_gray"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnDsc"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:text="Dsc"
                    android:background="@drawable/button_unselected"
                    android:textColor="@color/text_light_gray"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:textSize="14sp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Salary"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:textSize="18sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="4"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/minTextView"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="15dp"
                    android:text="50"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:background="@drawable/filter_apply_background"/>
                <TextView
                    android:id="@+id/maxTextView"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:text="250000"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/filter_apply_background"/>

            </LinearLayout>

            <com.rizlee.rangeseekbar.RangeSeekBar
                android:id="@+id/rangeSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:active="true"
                app:enableGradient="true"
                app:roundedCorners="true"
                app:minValue="50"
                app:maxValue="250000"
                app:textSize="14sp"
                app:showAdditionalText="none"
                app:showThumbsText="above"
                app:textColor="@android:color/black"
                app:thumbsTextMargin="8dp"
                app:sideColor="@color/dark_gray"
                app:transitionColor="@color/Theme2"
                app:centerColor="@color/Theme1"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Distance(km)"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"/>
            <com.warkiz.widget.IndicatorSeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:isb_indicator_color="@color/Theme1"
                app:isb_indicator_text_color="@color/white"
                app:isb_indicator_text_size="18sp"
                app:isb_min="10"
                app:isb_max="110"
                app:isb_progress="90"
                app:isb_only_thumb_draggable="false"
                app:isb_seek_smoothly="true"
                app:isb_show_indicator="rounded_rectangle"
                app:isb_show_tick_marks_type="oval"
                app:isb_show_tick_texts="true"
                app:isb_thumb_color="@color/Theme1"
                app:isb_thumb_size="22dp"
                app:isb_tick_marks_color="@color/Theme1"
                app:isb_tick_marks_size="13dp"
                app:isb_tick_texts_color="@color/text_color1"
                app:isb_tick_texts_size="15sp"
                app:isb_ticks_count="6"
                app:isb_track_background_color="@color/dark_gray"
                app:isb_track_background_size="2dp"
                app:isb_track_progress_color="@color/Theme1"
                app:isb_track_progress_size="4dp" />
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:id="@+id/bottomLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="3"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/filter_clear_background"
            android:gravity="center"
            android:text="Clear"
            android:textAllCaps="false"
            android:textColor="@color/text_light_gray"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnApply"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="Apply"
            android:background="@drawable/filter_apply_background"
            android:textColor="@color/Theme1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="14sp"/>

    </LinearLayout>





</RelativeLayout>