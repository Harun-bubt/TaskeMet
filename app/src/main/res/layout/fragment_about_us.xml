<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/aboutToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_gradient"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/contact_us"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/_18ssp" />

    </androidx.appcompat.widget.Toolbar>
    
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutToolBar">

            <LinearLayout
                android:id="@+id/allDetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:text="@string/phone"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:textColor="@color/Theme1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/edit_profile_borders"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="0.1"
                        android:layout_marginStart="3dp"
                        android:layout_height="25dp"
                        android:src="@drawable/icon_profile_number"
                        android:contentDescription="@string/image"/>

                    <TextView
                        android:id="@+id/phoneNubmerTextView"
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:background="@null"
                        android:maxLines="1"
                        android:gravity="center_vertical"
                       android:textColor="@color/text_color1"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btn_office_call"
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="5dp"
                        android:text="@string/call"
                        android:background="@drawable/btn_ad"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:visibility="visible" />

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:text="@string/email"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:textColor="@color/Theme1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/edit_profile_borders"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="0.1"
                        android:layout_marginStart="3dp"
                        android:layout_height="25dp"
                        android:src="@drawable/icon_email"
                        android:contentDescription="@string/image"/>

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:background="@null"
                        android:maxLines="1"
                        android:text="taskmet@gmail.com"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_color1"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btn_email"
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/btn_ad"
                        android:textSize="14sp"
                        android:text="@string/email"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:visibility="visible" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:text="@string/main_office"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:textColor="@color/Theme1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/edit_profile_borders"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="0.1"
                        android:layout_marginStart="3dp"
                        android:layout_height="25dp"
                        android:src="@drawable/icon_profile_location"
                        android:contentDescription="@string/image"/>

                    <TextView
                        android:id="@+id/addressTextView"
                        android:layout_width="0dp"
                        android:layout_weight="0.89"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:background="@null"
                        android:maxLines="1"
                        android:text="taskmet@gmail.com"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_color1"
                        android:textSize="16sp" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="0.01"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/btn_ad"
                        android:textSize="14sp"
                        android:text="@string/direction"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:visibility="invisible" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:text="@string/map_location"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:textColor="@color/Theme1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/edit_profile_borders"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_8sdp"
                        app:cardCornerRadius="10dp"
                        app:cardMaxElevation="5dp">

                        <com.google.android.gms.maps.MapView
                            android:id="@+id/ad_map"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_200sdp" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>
        
    </androidx.core.widget.NestedScrollView>

   


</RelativeLayout>