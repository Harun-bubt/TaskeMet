<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    tools:context=".Registration.Activity3_SignUp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="@string/image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/log_in"
            android:gravity="center_vertical"
            android:textColor="@color/text_color1"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:drawablePadding="8dp"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_below="@id/toolBar"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/myImage"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/icon_profile_pic"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/Theme1"
            android:layout_marginBottom="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/btn_sign_in"
            android:weightSum="2">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_vector_phone"
                android:layout_marginStart="3dp"
                android:contentDescription="@string/image"/>

            <TextView
                android:id="@+id/myNumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:hint="@string/enter_number"
                android:textColor="@color/text_color1"
                android:textSize="15sp"
                android:background="@drawable/sign_up_white_background"
                android:layout_weight="1.6"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/btn_sign_in"
            android:weightSum="2">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_name"
                android:layout_marginStart="3dp"
                android:contentDescription="@string/image"/>

            <EditText
                android:id="@+id/myName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/text_color1"
                android:textSize="15sp"
                android:hint="@string/add_name"
                android:autofillHints="@string/add_name"
                android:background="@drawable/sign_up_white_background"
                android:layout_weight="1.6"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/btn_sign_in"
            android:weightSum="2">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_email"
                android:layout_marginStart="3dp"
                android:contentDescription="@string/image"/>

            <EditText
                android:id="@+id/myEmail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/text_color1"
                android:hint="@string/add_email"
                android:autofillHints="@string/add_email"
                android:background="@drawable/sign_up_white_background"
                android:layout_weight="1.6"/>

        </LinearLayout>

