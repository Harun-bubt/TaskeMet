<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Looking For"
            android:layout_marginTop="10dp"
            android:textSize="22sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btnBride"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_selected"
                android:gravity="center"
                android:text="Bride"
                android:textAllCaps="false"
                android:textColor="@color/Theme1"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnGroom"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_unselected"
                android:gravity="center"
                android:text="Groom"
                android:textAllCaps="false"
                android:textColor="@color/text_light_gray"
                android:textSize="14sp" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Marital Status"
            android:layout_marginTop="10dp"
            android:textSize="22sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/btnUnmarried"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_selected"
                android:gravity="center"
                android:text="Unmarried"
                android:textAllCaps="false"
                android:textColor="@color/Theme1"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnDivorced"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_unselected"
                android:gravity="center"
                android:text="Divorced"
                android:textAllCaps="false"
                android:textColor="@color/text_light_gray"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnWidower"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_unselected"
                android:gravity="center"
                android:text="Widower"
                android:textAllCaps="false"
                android:textColor="@color/text_light_gray"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:gravity="start"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/btnSeparated"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_unselected"
                android:gravity="center"
                android:text="Separated"
                android:textAllCaps="false"
                android:textColor="@color/text_light_gray"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnMarried"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_unselected"
                android:gravity="center"
                android:text="Married"
                android:textAllCaps="false"
                android:textColor="@color/text_light_gray"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Age"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="22sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="4"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/minTextView"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_marginEnd="15dp"
                android:text="18"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@drawable/filter_apply_background"/>
            <TextView
                android:id="@+id/maxTextView"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:text="55"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginStart="15dp"
                android:background="@drawable/filter_apply_background"/>

        </LinearLayout>
        <com.rizlee.rangeseekbar.RangeSeekBar
            android:id="@+id/rangeSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:active="true"
            app:enableGradient="true"
            app:roundedCorners="true"
            app:minValue="18"
            app:maxValue="55"
            app:textSize="14sp"
            app:showAdditionalText="none"
            app:showThumbsText="above"
            app:textColor="@android:color/black"
            app:thumbsTextMargin="8dp"
            app:sideColor="@color/dark_gray"
            app:transitionColor="@color/Theme2"
            app:centerColor="@color/Theme1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Distance(km)"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="22sp"/>

        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isb_indicator_color="@color/Theme1"
            app:isb_indicator_text_color="@color/white"
            app:isb_indicator_text_size="18sp"
            app:isb_min="10"
            app:isb_max="110"
            app:isb_progress="90"
            app:isb_only_thumb_draggable="false"
            app:isb_seek_smoothly="true"
            app:isb_show_indicator="rounded_rectangle"
            app:isb_show_tick_marks_type="oval"
            app:isb_show_tick_texts="true"
            app:isb_thumb_color="@color/Theme1"
            app:isb_thumb_size="22dp"
            app:isb_tick_marks_color="@color/Theme1"
            app:isb_tick_marks_size="13dp"
            app:isb_tick_texts_color="@color/text_color1"
            app:isb_tick_texts_size="15sp"
            app:isb_ticks_count="6"
            app:isb_track_background_color="@color/dark_gray"
            app:isb_track_background_size="2dp"
            app:isb_track_progress_color="@color/Theme1"
            app:isb_track_progress_size="4dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="3"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/filter_clear_background"
            android:gravity="center"
            android:text="Clear"
            android:textAllCaps="false"
            android:textColor="@color/text_light_gray"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnApply"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="Apply"
            android:background="@drawable/filter_apply_background"
            android:textColor="@color/Theme1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="14sp"/>

    </LinearLayout>




</RelativeLayout>